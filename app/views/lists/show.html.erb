<h2><%= @list.name %></h2>
<ul>
  <% @list.bookmarks.each do |bookmark| %>
    <li><%= bookmark.movie.title %>
    <%= link_to "Delete",
    bookmark_path(bookmark),
    data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}
    %>
    </li>
    <% end %>
</ul>

<i class="fa-solid fa-trash"></i><%= link_to 'Add a bookmark', new_list_bookmark_path(@list) %>
